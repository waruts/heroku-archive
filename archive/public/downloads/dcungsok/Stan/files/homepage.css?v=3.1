/****************************************************************************************
Layout Stylesheet for Stanford University Homepage
****************************************************************************************/

/*********************************
General Classes
**********************************/
/* Image frame (override these settings by adding rules below) */
img.image_news, #slides img, #slideshow img {padding: 4px; background-color: #fff; border: 1px solid #ddd; box-shadow: 0 0 2px 1px #ddd; -moz-box-shadow: 0 0 2px 1px #ddd;}
h2 { color: #585754; border-bottom: 4px solid #585754;}

/*********************************
Title
**********************************/
#title h1 { display: none; }

/*********************************
Main Content - Wrapper
**********************************/
#content_main { padding: 0; margin: 15px 0 15px 0; float: left; width: 784px; border-right: 1px solid #e6e4db; position:relative;}

/*****************************************************************
Feature Banner Element
*****************************************************************/

#feature-banner {margin:0 0 15px -5px;float:left;clear:both;}

#feature-banner #browsable { position:relative; overflow:hidden; width:776px; height:335px; float:left; }
#feature-banner #slides { width:20000em; position:absolute;	clear:both; }
#feature-banner #slides .slide { width:776px; height:335px; float:left; }

#feature-banner a:active {outline: none; }
#feature-banner :focus {  -moz-outline-style:none;}
#feature-banner a.browse { background:transparent url(arrows-30.png) no-repeat left top; display:block; width:32px; height:80px; margin:40px 10px; cursor:pointer; font-size:1px; z-index:1; position:absolute; left:11px; top:90px; border-bottom:0;}
#feature-banner a.browse.prev, a.browse.next{ display:none;}

#feature-banner a.right { background-position: 0 -80px; margin-right: 0px; left:711px; }
#feature-banner a.right:hover {	background-position:-32px -80px; }
#feature-banner a.right:active { background-position:-64px -80px;}

#feature-banner a.left { margin-left: 0px;} 
#feature-banner a.left:hover { background-position:-32px 0;}
#feature-banner a.left:active {	background-position:-64px 0;}

#feature-banner .navi {	width: 80px; height:20px; position:absolute; right: 27px; top:300px; z-index:1; }
#feature-banner .navi a { width:12px; height:12px; float:left; margin:3px; 	background: url(navigator.png)  no-repeat; display:block; font-size:1px; border-bottom:0; cursor:pointer;}
#feature-banner .navi a:hover { background-position:0 -12px; }
#feature-banner .navi a.active { background-position:0 -24px; }

#feature-banner #slides a { border-bottom: none; color:#585754; }
#feature-banner #slides img { margin:5px 0 0 5px; padding:5px; }
#feature-banner #slides .textblock { width:210px; height: 265px;  margin:-321px 0 0 52px; padding: 50px 10px 0 10px; }
#feature-banner #slides .right  { margin:-321px 0 0 493px; text-align: right; }
#feature-banner #slides .top  { width: 625px; height: 80px; margin:-351px 0 0 52px; }
#feature-banner #slides .bottom  { width: 550px; height: 80px; margin:-158px 0 0 52px; }
#feature-banner #slides h3 { font-family: 'Source Sans Pro', Helvetica, sans-serif !important; font-size: 40px !important; font-weight: 400; color:#585754; line-height:38px;  margin: 0 0 10px 0; }
#feature-banner #slides p { color:#585754; font-size:15px; line-height:20px; font-family:'Source Sans Pro', Helvetica, sans-serif; font-weight: 400; }
#feature-banner #slides .top h3 { margin: 0 0 5px 0;}  
#feature-banner #slides .bottom h3 { margin: 5px 0 5px 0;}
#feature-banner #slides a.sandstone { color:#ddcf99; }
#feature-banner #slides a.white  { color:#fff; }
#feature-banner #slides a.sandstone50  { color:#eee6cb; }
#feature-banner #slides a.sandstone25  { color:#f6f3e5; }
#feature-banner #slides a.red  { color:#820000; }


/*********************************
Events/Sports
**********************************/
#events_sports { float: left; width: 155px; margin-right: 20px; margin-top: 8px;}
#events_sports h2 { width: 155px; }
#events_sports h2 a { text-decoration: none; border-bottom: none; }
#events_sports div h3 { width: 22px; padding: 0px 10px 0px 10px; text-align: center; }
#events_sports div p { margin-bottom: 7px; line-height: 14px; }
#events_sports div { margin-bottom: 10px; }
#events_sports div div.event_list { margin-left: 42px; margin-top: -33px; border-left: 1px solid #eae9e6; padding-left: 10px; }
.event_time { color: #820000; }
.event_month { color: #820000; font-size: 11px; font-family: 'Source Sans Pro', Arial, Helvetica, sans-serif; font-weight: 400; display: block }
.event_day { font-family: Georgia,'Times New Roman',Times; font-size: 21px; font-weight: 400; color: #565347; margin-top: -5px; display: block; }
.event_list { padding-bottom: 5px; }
#events, #sports {margin-top: 10px;}
p.more { clear: both;}

/*********************************
Center/Container styles
**********************************/
#content_center {margin: 0 -1px 0 0; float:left; width:568px; padding: 0 20px 20px 20px; border-left:1px solid #eae9e6;}
#content_center h2 { margin-top: 8px; }
#content_center h2 a { text-decoration: none; border-bottom: none; }

/*********************************
News
**********************************/
#news_spotlight_container { width: 570px; float: left; margin-bottom: 15px;}
#news {	width: 372px; float: left; padding-right: 10px;	margin: 10px 0 10px 0; border-right: 1px solid #eae9e6;}
#news h3 {margin-top: 3px; margin-bottom: 7px; font-size: 20px; font-weight: 400; }
#news p {font-size: 13px; line-height: 15px;}
#news img.image_news {float:left; position: relative;	top: -2px; left: -5px; margin: -2px 10px 16px 6px; width: 166px; height: 110px;}
#news .newsitem {float: left;	width:180px;}
#more-stories {	width: 155px; margin: 10px 0 10px 20px; float:left;}
#more-stories h2 {color: #820000; font-size: 12px; letter-spacing: .05em; border-bottom: none; padding: 0 0 3px 0; } 
#newslinks { padding-left: 13px; margin-top: 0;}
#newslinks li {	list-style-image:url(raquo.gif); margin-left: 0; padding:0 0 10px 0px; font-size: 13px; line-height: 15px;}

/*********************************
At Stanford - Carousel slides
*****************************************************************/

.atstanford { position: relative; float: left; cursor: pointer; margin: 2px 0 20px 0; height: 160px; width: 558px; background: #fff; }
.atstanford div { display: none; position: absolute; top: 0; left: 0; margin: 0; padding: 0; font-size: 12px; }
.atstanford img { background: url(frame.jpg) no-repeat left top; float: left; position: relative; left: -5px; padding: 11px; }
.atstanford p { position: absolute; top: 30px; left: 410px; width: 140px; font: 18px 'Crimson Text', Georgia, Times, serif; line-height: 18px; }
.slidetabs { display: none; }
.disabled { visibility: hidden !important; }

/**********************************
Stanford Seal Watermark
***********************************/
#seal { width: 118px; height: 118px; padding: 0px; margin: 20px 0 0 19px; background: url("seal.png") no-repeat; background-size: 118px;}
@media 
(-webkit-min-device-pixel-ratio: 2), 
(min-resolution: 192dpi) { 
#seal { background: url("seal@2x.png") no-repeat; background-size: 118px;}
}

/*********************************
Sidebar (right)
**********************************/
#sidebar { margin-top: 15px; padding-left: 20px;float: left; width: 155px; }
#sidebar h3 { color: #820000; font-size: 11px; letter-spacing: .05em; text-transform: uppercase; padding: 3px 0 3px 0; }
#sidebar div { margin-bottom: 15px; }
#sidebar ul { list-style: url("raquo.gif"); padding-bottom: 5px; }
#sidebar li { margin-left: 15px; padding-bottom: 5px; line-height: 12px; }

/* Slideshow */
#slideshow { }
#slideshow h2 {margin-bottom:11px;}
#slideshow p {float: left; width: 85px; font-size: 13px; line-height: 15px; padding: 5px;}
#slideshow img { float: left; padding: 3px; margin-right: 4px;}

/* Social */
#social { margin-top:15px; }
#social ul { list-style: none; margin-top:12px; }
#social li { list-style-image: none; display:inline; margin-left: 0; padding: 0 3px;}
#social li a { border:none; }


/*********************************
Mobile 
**********************************/
#view-mobile { display:block !important; padding:15px 0 30px 0; width: auto; min-width:980px; text-align:center; background:#333; }
#view-mobile a { color:#fff; font-size:5em; text-shadow: 0 -1px 1px #000; text-decoration:none; border-bottom:0.1em dotted #fff;}

@media screen and (max-device-width: 480px){
 body{   -webkit-text-size-adjust: none;}
}
